#define MID int mid = (left_lmt+right_lmt)>>1
struct node{
	int val;
	void merge(node &a, node &b)
	{
	}
	void split(node &a, node &b)
	{
	}
}tree[5*MAXN];
node identity;

void build_tree(int root = 1, int left_lmt = 1, int right_lmt = n)
{
	if(left_lmt == right_lmt){
		// Initialise here
		return ;
	}
	MID;
	build_tree(root*2, left_lmt, mid);
	build_tree(root*2+1, mid+1, right_lmt);
}
